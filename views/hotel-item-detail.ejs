<% include components/header.ejs %>

<!-- ASIDE NAV AND CONTENT -->
<div class="line">
  <div class="box">
     <div class="margin2x">
        <!-- CONTENT -->
        <section class="s-12 m-8 l-9 middle">
          <div class="margin">
            <div class="inner-detail">
              <section class="hotel-images">
                <div class="left-images">
                  <img src="<%= hotel.hotelImages[0] %>" alt="">
                </div>
                <div class="right-images">
                    <img src="<%= hotel.hotelImages[1] %>" alt="">
                    <img src="<%= hotel.hotelImages[2] %>" alt="">
                    <img src="<%= hotel.hotelImages[3] %>" alt="">
                </div>
              </section>
              <hr>
              <section class="hotel-titles">
                <h3><%= hotel.hotelName %> | 
                <% for(let i = 0; i < hotel.hotelStars; i++) { %>
                  <span><i class="fa fa-star" aria-hidden="true"></i></span>
                <% } %>
              </h3>
                <p>
                  <h6><%= hotel.hotelAddress %> | <%= hotel.city %> | <%= hotel.country %></h6>
                </p>
              </section>
              <hr>
              <section class="hotel-facilities">
                <ul>
                  <% for(let facility in hotel.hotelFacilities) { %>
                    <li class="facility-item">
                      <h5><%= facility %></h5>
                      <ul>
                        <% for(let item in hotel.hotelFacilities[facility]) { %>
                          <li>
                            <img src="/assets/images/icons/<%= facility %>/<%= hotel.hotelFacilities[facility][item] %>.gif" alt="<%= hotel.hotelFacilities[facility][item] %>"><span class="facility-img-title"><%= hotel.hotelFacilities[facility][item] %></span>
                          </li>
                        <% } %>
                    </ul>
                    </li>
                  <% } %>
                </ul>
              </section>
              <hr>
              <section class="hotel-details">
                <ul>
                  <li>
                    <h4>Introduction</h4>
                    <p><%= hotel.hotelDescription.intro %></p>
                  </li>
                  <li>
                    <h4>Content</h4>
                    <p><%= hotel.hotelDescription.content %></p>
                  </li>
                </ul>
              </section>
            </div>
          </div>
        </section>
    </div>
  </div>
</div>

<% include components/footer.ejs %>